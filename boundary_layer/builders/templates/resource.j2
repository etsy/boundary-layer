{% set bundle_class = node.create_operator.operator_class %}
    with {{ bundle_class }}(
{% set scrubbed_args = args | remove_deprecated_args(bundle_class) %}
{% for (arg_name, arg_value) in scrubbed_args.items() %}
        {{ arg_name }} = {{ arg_value | format_value }},
{% endfor %}
{% set bundle_variable_name = node.name | sanitize_operator_name %}
    ): as {{ bundle_variable_name }}
{% for downstream in node.downstream_operators %}

{% set operator_class = downstream.operator_class %}
{% set operator_variable_name = downstream.name | sanitize_operator_name %}
        {{ operator_variable_name }} = {{ operator_class }}(
{% set scrubbed_args = downstream.operator_args | remove_deprecated_args(operator_class) %}
{% for (arg_name, arg_value) in scrubbed_args.items() %}
            {{ arg_name }} = {{ arg_value | format_value }},
{% endfor %}
        )

{% for upstream_operator in downstream.upstream_operators %}
{% set upstream_variable_name = upstream_operator.name | sanitize_operator_name %}
        {{ upstream_variable_name }} >> {{ operator_variable_name }}
{% endfor %}
{% endfor %}

{% for upstream_operator_name in upstream_dependencies %}
{% set upstream_variable_name = upstream_operator_name | sanitize_operator_name %}
    {{ upstream_variable_name }} >> {{ bundle_variable_name }}
{% endfor %}
